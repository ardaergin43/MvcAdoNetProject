@{
    ViewBag.Title = "Ürün Listesi";
    var products = ViewBag.Products as List<MvcAdoNetProjem.Models.Product>;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2>Ürün Ekle</h2>
    <form asp-controller="Home" asp-action="AddProduct" method="post" enctype="multipart/form-data" class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Ürün Adı</label>
            <input type="text" name="ProductName" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label class="form-label">Açıklama</label>
            <input type="text" name="Description" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Fiyat</label>
            <input type="number" name="Price" step="0.01" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label class="form-label">Stok</label>
            <input type="number" name="Stock" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label class="form-label">Ürün Görseli</label>
            <input type="file" name="ImageFile" class="form-control" accept="image/*" required />
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Ekle</button>
        </div>
    </form>

    <hr class="my-4" />

    <h2>Ürünler</h2>
    <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Görsel</th> <!-- Yeni Görsel sütunu -->
                <th>Ad</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>Tarih</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="Ürün Görseli"
                                style="width: 80px; height: auto; border-radius: 4px;" />
                        }
                    </td>
                    <td>@product.ProductName</td>
                    <td>@product.Description</td>
                    <td>@product.Price ₺</td>
                    <td>@product.Stock</td>
                    <td>@product.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        @if (product.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </td>
                    <td>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal"
                            data-bs-target="#deleteModal" data-product-id="@product.Id"
                            data-product-name="@product.ProductName">
                            Sil
                        </button>

                        <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal"
                            data-bs-target="#updateModal-@product.Id">
                            Güncelle
                        </button>

                        <div class="modal fade" id="updateModal-@product.Id" tabindex="-1"
                            aria-labelledby="updateModalLabel-@product.Id" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form asp-controller="Home" asp-action="UpdateProduct" method="post"
                                        enctype="multipart/form-data">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Ürün Güncelle</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Kapat"></button>
                                        </div>
                                        <div class="modal-body">
                                            <input type="hidden" name="Id" value="@product.Id" />
                                            <input type="hidden" name="ImageUrl" value="@product.ImageUrl" />
                                            <!-- Mevcut görsel url gönderiliyor -->
                                            <div class="mb-3">
                                                <label class="form-label">Ürün Adı</label>
                                                <input type="text" name="ProductName" class="form-control"
                                                    value="@product.ProductName.Trim()" required />
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Açıklama</label>
                                                <input type="text" name="Description" class="form-control"
                                                    value="@product.Description.Trim()" />
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Fiyat</label>
                                                <input type="number" name="Price" step="0.01" class="form-control"
                                                    value="@product.Price.ToString(System.Globalization.CultureInfo.InvariantCulture)"
                                                    required />
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Stok</label>
                                                <input type="number" name="Stock" class="form-control"
                                                    value="@product.Stock" required />
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Yeni Görsel (Opsiyonel)</label>
                                                <input type="file" name="ImageFile" class="form-control" accept="image/*" />
                                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                {
                                                    <small class="text-muted">Mevcut görsel: </small>
                                                    <br />
                                                    <img src="@product.ImageUrl" alt="Mevcut Görsel"
                                                        style="width: 100px; height: auto; margin-top: 5px; border-radius: 4px;" />
                                                }
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">İptal</button>
                                            <button type="submit" class="btn btn-success">Kaydet</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Silme Onay Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" asp-controller="Home" asp-action="DeleteProduct">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-danger">Ürünü Sil</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p><strong id="productNameToDelete"></strong> adlı ürünü silmek istediğinize emin misiniz?</p>
                    <input type="hidden" name="id" id="productIdToDelete" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Evet, Sil</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const productId = button.getAttribute('data-product-id');
        const productName = button.getAttribute('data-product-name');

        document.getElementById('productIdToDelete').value = productId;
        document.getElementById('productNameToDelete').innerText = productName;
    });
</script>
