@{
    ViewData["Title"] = "Ürünler";
    var products = (ViewBag.Products as List<MvcAdoNetProjem.Models.Product>)?.OrderByDescending(p => p.Id).ToList();
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />

<div class="container mt-4">
    <h2 class="text-center fw-bold mb-5">Ürünler</h2>

    <!-- Filtreleme Alanı -->
    <div class="row mb-4 align-items-center">
        <!-- Ürün İsmi -->
        <div class="col-md-3 mb-2">
            <input type="text" id="searchName" class="form-control" placeholder="Ürün ismine göre ara" />
        </div>

        <!-- Min Fiyat -->
        <div class="col-md-2 mb-2">
            <input type="number" id="minPrice" class="form-control" placeholder="Min Fiyat" />
        </div>

        <!-- Max Fiyat -->
        <div class="col-md-2 mb-2">
            <input type="number" id="maxPrice" class="form-control" placeholder="Max Fiyat" />
        </div>

        <!-- Aktif/Pasif Durum -->
        <div class="col-md-2 mb-2">
            <select id="activeFilter" class="form-select">
                <option value="">Tüm Durumlar</option>
                <option value="true">Aktif</option>
                <option value="false">Pasif</option>
            </select>
        </div>
    </div>


    <div class="row" id="productList">
        @for (int i = 0; i < products.Count; i++)
        {
            var product = products[i];
            <div class="col-md-4 mb-4 product-card" data-name="@product.ProductName.ToLower()" data-price="@product.Price"
                data-stock="@product.Stock" data-active="@product.IsActive.ToString().ToLower()">
                <div class="card h-100 shadow-sm border-0 rounded-4 position-relative">
                    @if (i < 3)
                    {
                        <span class="badge bg-danger position-absolute top-0 start-0 m-2">Yeni Geldi</span>
                    }
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@Url.Content(product.ImageUrl)" class="card-img-top" style="height: 200px; object-fit: cover;"
                            alt="Ürün Görseli" />
                    }
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title text-primary fw-semibold">@product.ProductName</h5>
                        <p class="card-text text-muted">@product.Description</p>
                        <p class="mb-1"><strong>Stok:</strong> @product.Stock</p>
                        <p class="mb-0">
                            <strong>Durum:</strong>
                            @if (product.IsActive)
                            {
                                <span class="text-success fw-bold">Aktif</span>
                            }
                            else
                            {
                                <span class="text-danger fw-bold">Pasif</span>
                            }
                        </p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-bold fs-5 text-success">@product.Price ₺</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- SSS Alanı -->
    <div class="mt-5">
        <h4 class="fw-bold mb-3">Sıkça Sorulan Sorular (SSS)</h4>
        <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#faq1">
                        Giriş nasıl yapılır?
                    </button>
                </h2>
                <div id="faq1" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Sayfanın sağ üst köşesindeki "Giriş Yap" butonuna tıklayarak giriş yapabilirsiniz. Kayıt
                        olmadıysanız "Kayıt Ol" butonunu kullanabilirsiniz.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#faq2">
                        Ürünler nasıl filtrelenir?
                    </button>
                </h2>
                <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Arama kutusunu kullanarak ürün ismine göre arama yapabilir, fiyat aralığı seçiciyle minimum ve
                        maksimum fiyatı belirleyebilir, ayrıca ürünlerin aktif/pasif durumuna göre filtreleme
                        yapabilirsiniz.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingThree">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#faq3">
                        Sisteme nasıl ürün eklenir?
                    </button>
                </h2>
                <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        Ürün eklemek için sisteme giriş yapmanız gerekir. Giriş yaptıktan sonra panele erişerek ürün
                        ekleme işlemlerini gerçekleştirebilirsiniz.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Giriş Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Giriş Yap</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label for="email">E-posta:</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="password">Şifre:</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Kayıt Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Kayıt Ol</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label>Ad:</label>
                        <input type="text" name="Name" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label>Soyad:</label>
                        <input type="text" name="Surname" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label>E-posta:</label>
                        <input type="email" name="Email" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label>Şifre:</label>
                        <input type="password" name="Password" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Kayıt Ol</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    function filterProducts() {
        const name = document.getElementById("searchName").value.toLowerCase();
        const minPrice = parseFloat(document.getElementById("minPrice").value) || 0;
        const maxPrice = parseFloat(document.getElementById("maxPrice").value) || Number.MAX_VALUE;
        const activeStatus = document.getElementById("activeFilter").value;

        const cards = document.querySelectorAll(".product-card");

        cards.forEach(card => {
            const cardName = card.dataset.name;
            const cardPrice = parseFloat(card.dataset.price);
            const cardActive = card.dataset.active;

            const matchName = cardName.includes(name);
            const matchPrice = cardPrice >= minPrice && cardPrice <= maxPrice;
            const matchActive = activeStatus === "" || cardActive === activeStatus;

            if (matchName && matchPrice && matchActive) {
                card.style.display = "block";
            } else {
                card.style.display = "none";
            }
        });
    }

    document.getElementById("searchName").addEventListener("input", filterProducts);
    document.getElementById("activeFilter").addEventListener("change", filterProducts);
    document.getElementById("minPrice").addEventListener("input", filterProducts);
    document.getElementById("maxPrice").addEventListener("input", filterProducts);


    document.getElementById("searchName").addEventListener("input", filterProducts);
    document.getElementById("activeFilter").addEventListener("change", filterProducts);
</script>
